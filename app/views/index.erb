<header>
  <h1>WATCHitNEXT</h1>
</header>

<div class="container">
  <div class="search">
    <img src="images/tinysearch.png">
    <form action="/" method="post">
      <input type="text" name="title" placeholder="Enter movie title">
    </form>
  </div>

  <h2>Now in theaters:</h2>
  <div class="movies">
    <ol class="ordered"><% @movies.each do |movie| %>
    <div class="movie_container">
      <img src="<%= movie.image %>">
      <li><a href="/movie"><%= movie.title %></a></li>
        <ul class="unordered">
          <li><%= movie.rating%>%</li>
          <li class="short_synopsis"><%= movie.short_synopsis %></li>
          <li class="long hidden"><%= movie.synopsis %></li>
        </ul>
      </div>
      <% end %>
    </ol>
  </div>

</div>