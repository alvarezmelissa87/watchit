<div class="container">
  <h1>WATCHitNEXT</h1>

  <div class="search">
    <img src="images/tinysearch.png">
    <form action="/" method="post">
      <input type="text" name="search_term">
    </form>
  </div>

  <div class="movies">
    <ol class="ordered"><% @movies.each do |movie| %>
    <div class="movie_container">
      <img src="<%= movie.image %>">
      <li><%= movie.title %></li>
        <ul class="unordered">
          <li><%= movie.rating%>%</li>
          <li><%= movie.short_synopsis %></li>
        </ul>
      </div>
      <% end %>
    </ol>
  </div>

</div>